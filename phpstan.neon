includes:
    - vendor/larastan/larastan/extension.neon

parameters:
    paths:
        - app/
        - config/
        - database/
        - routes/
        - tests/

    level: 5

    universalObjectCratesClasses:
        - PHPUnit\Framework\TestCase

    databaseMigrationsPath:
        - database/migrations

    checkModelProperties: true

    ignoreErrors:
        - '#Call to an undefined method PHPUnit\\Framework\\TestCase::(get|getJson|post|postJson|put|putJson|patch|patchJson|delete|deleteJson|actingAs|withSession|withoutMiddleware|from|assertDatabaseHas|assertDatabaseMissing|assertSoftDeleted|artisan|mock|partialMock|spy)\(\)#'
        # Pest expect()->extend() closures use $this which PHPStan doesn't understand
        - '#Undefined variable: \$this#'
        # Factory return type compatibility
        - '#Return type \(array<string, mixed>\) of method Database\\Factories\\.*Factory::definition\(\) should be compatible with#'
        # Laravel Collection covariance issues - PHPStan doesn't handle generic Collections well
        # These are false positives when collections have the same shape
        -
            identifier: argument.type
            path: app/*
        -
            identifier: return.type
            path: app/*
        -
            identifier: argument.type
            path: tests/Feature/TmdbServiceTest.php
        # Collection covariance false positives in Pest tests
        -
            identifier: argument.type
            path: tests/Feature/Actions/*
